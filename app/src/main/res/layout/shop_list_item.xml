<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/shop_list_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@mipmap/ylwy"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/shop_list_textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商店名"
                android:textSize="20sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/shop_list_textview21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总评分: "
                android:textSize="18sp"
                android:layout_below="@id/shop_list_textview1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/shop_list_textview22"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_list_textview21"
                android:layout_below="@id/shop_list_textview1"
                android:layout_marginLeft="1dp"
                android:text="3.99"
                android:textSize="18sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/shop_list_textview23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    总订单: "
                android:textSize="18sp"
                android:layout_toRightOf="@+id/shop_list_textview22"
                android:layout_below="@id/shop_list_textview1"
                android:layout_marginBottom="2dp" />
            <TextView
                android:id="@+id/shop_list_textview24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_list_textview23"
                android:layout_below="@id/shop_list_textview1"
                android:layout_marginLeft="1dp"
                android:text="3999"
                android:textSize="18sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/shop_list_textview31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textSize="18sp"
                android:layout_below="@id/shop_list_textview21"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/shop_list_textview32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.33km"
                android:textSize="18sp"
                android:layout_below="@id/shop_list_textview24"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp" />
        </RelativeLayout>
</LinearLayout>

</LinearLayout>
